{
	"name": "figma-plugin-react-tailwind-template",
	"version": "1.0.0",
	"description": "This plugin template uses Typescript & Tailwind",
	"license": "ISC",
	"scripts": {
		"build": "webpack --mode=production",
		"build:watch": "webpack --mode=development --watch"
