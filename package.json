		"react-dom": "^17.0.2",
		"sass-loader": "^10.2.0"
	},
	"devDependencies": {
		"@figma/plugin-typings": "^1.24.0",
		"@types/react": "^17.0.11",
		"@types/react-dom": "^17.0.7",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"autoprefixer": "^10.4.0",
		"css-loader": "^5.0.1",
		"html-webpack-inline-source-plugin": "^0.0.10",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^4.3.0",
		"inline-chunk-html-plugin": "^1.1.1",
		"lint-staged": "^10.5.1",
		"postcss": "^8.4.5",
		"postcss-loader": "^6.2.1",
		"prettier": "^2.3.1",
		"style-loader": "^2.0.0",
		"tailwindcss": "^3.0.7",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"url-loader": "^4.1.1",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,css,json}": [
			"prettier --write",
			"git add"
		]
	}
